#!/bin/bash

CURRENT=`pwd`
rm -rf target
mkdir target

cd ../karma-web/
mvn package -Pshaded
ls target/karma-web*.war
cp target/karma-web*.war $CURRENT/target/karma.war

cd $CURRENT/target

# download tomcat binary
wget http://mirrors.koehn.com/apache/tomcat/tomcat-9/v9.0.0.M9/bin/apache-tomcat-9.0.0.M9.zip -O tomcat.zip
unzip tomcat.zip

mv apache-tomcat* tomcat
mv karma.war tomcat/webapps

mkdir karma
mv tomcat karma/
